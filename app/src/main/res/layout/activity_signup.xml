<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.todo.LoginActivity">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:indeterminateTint="@color/colorPurple"/>

    <RelativeLayout
        android:id="@+id/signUp_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_weight="4"
                android:src="@drawable/ic_background"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="vertical">

            <TextView
                android:layout_margin="?actionBarSize"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="#fff"
                android:text="Sign up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <AutoCompleteTextView
                android:id="@+id/username"
                android:textColor="#fff"
                android:textColorHint="#eee"
                android:paddingStart="10dp"
                android:hint="Username"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@drawable/rounded_corner"
                android:textSize="17sp"
                android:autofillHints=""
                tools:ignore="RtlSymmetry"
                android:inputType="textEmailAddress"
                android:maxLines="3"
                android:singleLine="true"/>

            <AutoCompleteTextView
                android:id="@+id/userEmail"
                android:textColor="#fff"
                android:textColorHint="#eee"
                android:paddingStart="10dp"
                android:hint="Email"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@drawable/rounded_corner"
                android:textSize="17sp"
                android:autofillHints=""
                tools:ignore="RtlSymmetry"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/password"
                android:textColor="#fff"
                android:textColorHint="#eee"
                android:paddingStart="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@drawable/rounded_corner"
                android:textSize="17sp"
                tools:ignore="RtlSymmetry"
                android:autofillHints=""
                android:imeActionId="6"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:singleLine="true"/>

            <Button
                android:id="@+id/username_sign_up_button"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:background="@drawable/rounded_corner_button"
                android:text="sign up"
                android:textColor="#777"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:text="Forgot Password ?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/options_form"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="5dp"
                android:text="Or Signup with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/ic_google"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <ImageButton
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/ic_facebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <ImageButton
                    android:background="@drawable/ic_twitter"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>