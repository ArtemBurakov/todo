<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_tasks">

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.example.todo.ui.tasks.TasksFragment"
        tools:layout="@layout/fragment_tasks" />

    <fragment
        android:id="@+id/navigation_workspaces"
        android:name="com.example.todo.ui.workspaces.WorkspacesFragment"
        tools:layout="@layout/fragment_workspaces" />

    <fragment
        android:id="@+id/navigation_notes"
        android:name="com.example.todo.ui.notes.NotesFragment"
        tools:layout="@layout/fragment_notes" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.todo.ui.settings.SettingsFragment" />
</navigation>